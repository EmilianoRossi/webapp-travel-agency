<body>

    <main>
        
        <div class= "row mt-0">

            <div class="col-12 h-25">

                <div id="myCarousel" class="carousel slide h-" data-ride="carousel">
          
                  <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                  </ol>

                  <div class="carousel-inner">
                        <div class="item active">
                            <img src=".\css/img/cour.jpg" alt="Los Angeles" style="width:100%; height:50%;">
                        <div class="carousel-caption">
                            <h3 class = "text-danger">Lo stesso metodo</h3>
                            <p class = "text-danger">Dal 1950</p>
                        </div>
                      </div>

                      <div class="item">
                        <img src=".\css/img/maldive.jpg" alt="Chicago" style="width:100%; height:50%;">
                        <div class="carousel-caption">
                          <h3 class = "text-danger">Creatività</h3>
                          <p class = "text-danger">Ci contraddistingue il nostro essere creativi</p>
                        </div>
                      </div>
    
                      <div class="item">
                        <img src=".\css/img/viaggi-640x313.jpg" alt="New york" style="width:100%; height:50%;">
                        <div class="carousel-caption"
                          <h3 class = "text-danger">Semplici</h3>
                          <p class = "text-danger">Semplicità complessa</p> 
                        </div>
                      </div>
                  </div>

                    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

              </div>
            </div>

        <div class="row text-center justify-content-center gx-0 mt-5">
            <div class="col-12 col-sm-3">
                <div class="card shadow mb-5 bg-body rounded" style="width: 18rem;">
                    <img class="img-fluid" src=".\css/img/lista.jpg" class="card-img-top" alt="primaFoto">
                <div class="card-body p-0 pb-0">
                    <h6 class="card-title text-uppercase bg-primary pb-2 pt-2 text-white ">Lista pacchetti!</h6>
                    <p class="card-text ps-2 pe-2 mb-4 mt-3"><small>Visualizza la nostra lista pacchetti!</small></p>
                </div>
                <ul class="list-group list-group-flush pb-0 mb-2">
                    <a href="@Url.Action("ListaViaggi" , "Viaggi")" class="btn btn-primary">Visualizza!</a>
                </ul>    
                    
                </div>
            </div>

            <div class="col-12 col-sm-3">
                <div class="card shadow mb-5 bg-body rounded" style="width: 18rem;">
                    <img class="img-fluid" src=".\css/img/inserisci.jpg" class="card-img-top" alt="primaFoto">
                <div class="card-body p-0 pb-0">
                    <h6 class="card-title text-uppercase bg-primary pb-2 pt-2 text-white ">Lista pacchetti</h6>
                    <p class="card-text ps-2 pe-2 mb-4 mt-3"><small>Inserisci un nuovo pacchetto!</small></p>
                </div>
                <ul class="list-group list-group-flush pb-0 mb-2">
                    <a href=@Url.Action("Create" , "Viaggi") class="btn btn-primary">Inserisci!</a>
                </ul>    
                    
                </div>
            </div>
               
            <div class="col-12 col-sm-3">
                <div class="card shadow mb-5 bg-body rounded" style="width: 18rem;">
                    <img class="img-fluid" src=".\css/img/95082__testata_1280_.jpg" class="card-img-top" alt="primaFoto">
                    <div class="card-body p-0 pb-0">
                        <h6 class="card-title text-uppercase bg-primary pb-2 pt-2 text-white ">Richieste clienti</h6>
                        <p class="card-text ps-2 pe-2 mb-4 mt-3"><small>Visualizza le richieste dei clienti!</small></p>
                    </div>
                    <ul class="list-group list-group-flush pb-0 mb-2">
                        <a href="#" class="btn btn-primary">Informazioni!</a>
                    </ul>   
                    
                </div>
            </div>
        </div>

    </main>

</body>