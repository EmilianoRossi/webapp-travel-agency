@model Viaggio

<body class="bg-primary" style="position:relative; height: 100%; background: url('https://www.weddingchianti.it/wp-content/uploads/2018/05/wedding-matrimonio-mongolfiere-toscana-chianti-sposarsi-in-mongolfiera.jpg') no-repeat ; background-size:cover; box-shadow:inset 0 -1px 5px;">
    <main>

    <div class="container">
        <div class="row">
            <div class="col-6">
                <div class = "row mt-3 justify-content-center">
                    <div class ="col-4 justify-content-center mb-5">
                        
                    </div>
                </div>
                <div class="d-flex align-items-center">
                    <h1>Inserisci un nuovo pacchetto!</h1>
                    
                </div>
                <div class="d-flex align-items-center">
                              
                    <h2>Compila il Form</h2>
                </div>
                <form action="@Url.Action("Create", "Viaggi")" method="post">
                    @Html.AntiForgeryToken()
                    <div class="col-3 mb-3">
                        <h5>Nome:</h5>
                        <input asp-for="Nome" class="d-block w-100 text-black" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="col-3 mb-5">
                        <h5>Prezzo:</h5>
                        <input asp-for="Prezzo" class="d-block w-100" />
                        <span asp-validation-for="Prezzo" class="text-danger"></span>
                    </div>
                    <div class="col-3 mb-3">
                        <h5>Foto:</h5>
                        <input asp-for="Foto" class="d-block w-100" />
                        <span asp-validation-for="Foto" class="text-danger"></span>
                    </div>
                    <div class="col-3 mb-3">
                        <h5>Descrizione:</h5>
                        <textarea asp-for="Descrizione" rows="10" class="d-block w-100"></textarea>
                        <span asp-validation-for="Descrizione" class="text-danger"></span>
                    </div>
                    <div class="text-start">
                        <input type="submit" class="btn btn-small btn-primary" value="Salva">
                    </div>
                

                </form>
            </div>
        </div>
    </div>
    </main>
</body>