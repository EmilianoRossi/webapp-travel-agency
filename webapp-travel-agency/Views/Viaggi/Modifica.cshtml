@model Viaggio

<body>
    <main>

    <div class="container">
        <div class="row">
            <div class="col-6">
                <div class = "row mt-3 justify-content-center">
                    <div class ="col-4 justify-content-center mb-5">
                        
                    </div>
                </div>
                <div class="d-flex align-items-center">
                    <h3>Inserisci un nuovo pacchetto!</h3>
                </div>
                <form action="@Url.Action("Modifica", "Viaggi")" method="post">
                    @Html.AntiForgeryToken()
                    <div class="col-3 mb-3">
                        <h5>Nome:</h5>
                        <input asp-for="Nome" class="d-block w-100" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="col-3 mb-5">
                        <h5>Prezzo:</h5>
                        <input asp-for="Prezzo" class="d-block w-100" />
                        <span asp-validation-for="Prezzo" class="text-danger"></span>
                    </div>
                    <div class="col-3 mb-3">
                        <h5>Foto:</h5>
                        <input asp-for="Foto" class="d-block w-100" />
                        <span asp-validation-for="Foto" class="text-danger"></span>
                    </div>
                    <div class="col-3 mb-3">
                        <h5>Descrizione:</h5>
                        <textarea asp-for="Descrizione" rows="10" class="d-block w-100"></textarea>
                        <span asp-validation-for="Descrizione" class="text-danger"></span>
                    </div>
                    <div class="text-start">
                        <input type="submit" class="btn btn-small btn-success" value="Salva">
                    </div>
                

                </form>
            </div>
        </div>
    </div>
    </main>
</body>